<div class="d-flex justify-content-center">

<div class="col-md-4 col-md-offset-4">
<h1>Find your Workspace</h1><br>

<%= form_tag( "search", method: "post", class:"form-inline") do %>
  <div class="form-group mix-sm-3 mb-2">
  <input type="text" name="email" class="form-control">
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag("Search",class:"btn btn-primary mb-2") %>
<% end %>
</div>
</div>

<div class="d-flex justify-content-center">
  <div class="col-sm-4"><br>
  <ul class="list-group">
    <%= render partial: 'workspace', collection: @workspaces %>
  </div>
</div>


