<%= render 'layouts/nav2' %>

<div class="d-flex justify-content-center">
  <div class="col-md-4 col-md-offset-4">
    <h1 align="center"><%= t('Edit Workspace') %></h1>

      <%= form_with(model: @workspace, local: true) do |form| %>
        <div class="form-group has-feedback">
          <%= form.label :wks_name %>
          <%= form.text_field :wks_name, class: 'form-control' %>
        </div>
  
        <div class="form-group has-feedback">
          <%= form.submit t('Update'), class: 'btn btn-primary btn-block'  %>   
        </div>
        <% end %>

        <div class="form-group has-feedback">
          <%= button_to t('Delete'),  @workspace, :id => "open-contacts-dialog-btn",
            :class => "btn btn-primary btn-block", :method => :delete, data: { confirm: 'Are you sure?' } %>
        </div>

        <div class="form-group has-feedback">
          <%= button_to t('Cancel'), workspace_path(@workspace), :id => "open-contacts-dialog-btn",
            :class => "btn btn-secondary btn-block", :method => :get %>
        </div>
    </div>
</div>
      
        


