<% provide(:title, "CreatWorkspace") %>

<%= render 'layouts/nav' %>

<h1 align="center"><%= t('Create Workspace') %></h1>
<div class="d-flex justify-content-center">
  <div class="col-md-4 col-md-offset-4">

    <div class="form-group has-feedback"> 
      <%= form_for @uworkspace, url: {action: "create"} do |f| %>
      <%= f.label :wks_name %>
      <%= f.text_field :wks_name, class: 'form-control' %>
    </div>

    <div class="form-group has-feedback"> 
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group has-feedback"> 
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group has-feedback"> 
      <%= f.label :wks_password %>
      <%= f.password_field :wks_password, class: 'form-control' %> 
    </div>

    <div class="form-group has-feedback"> 
      <%= f.submit t('Create Workspace'), class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

    <div class="form-group has-feedback"> 
      <p> If you have already workspace? <%= link_to t('Find Workspace'), workspaceList_path %>
    </div>
  </div>
</div>
