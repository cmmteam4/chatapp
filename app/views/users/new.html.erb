<% provide(:title, 'Sign up') %>
<div class="d-flex justify-content-center">
<div class="col-md-4 col-md-offset-4">
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
  <%= form_for(@user) do |f| %>
     
      <%= f.label :name %>
      <%= f.text_field :name, name:"name", class: 'form-control' %><br>

      <%= f.label :email %>
      <%= f.email_field :email, name:"email", class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password, name:"password", class: 'form-control' %><br>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, name:"password_confrimation", class: 'form-control' %><br>


      <%= f.submit "Create my account", class: "btn btn-primary" %>
      <%= link_to 'Login', login_path %><br><br>
    <% end %>
  </div>
</div>
</div>
</div>
