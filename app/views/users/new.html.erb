<% provide(:title, 'Sign up') %>
<div class="d-flex justify-content-center">
<div class="col-md-4 col-md-offset-4">
<h1 style="text-align:center">Sign up</h1>
    
  <%= form_for(@user) do |f| %>
      <div class="form-group has-feedback">
      <%= f.label :name %>
      <%= f.text_field :name, name:"name", class: 'form-control' %>
      </div>
      
      <div class="form-group has-feedback">
      <%= f.label :email %>
      <%= f.email_field :email, name:"email", class: 'form-control' %>
      </div>

      <div class="form-group has-feedback">
      <%= f.label :password %>
      <%= f.password_field :password, name:"password", class: 'form-control' %>
      </div>

      <div class="form-group has-feedback">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, name:"password_confrimation", class: 'form-control' %>
      </div>

      <div class="form-group has-feedback">
      <%= f.submit "Create my account", class: "btn btn-primary btn-block" %>
      </div>

      <div class="form-group has-feedback">
      <p>If you hava account?  <%= link_to 'Login', login_path %></p>
      </div>
    <% end %>
  </div>
</div>

