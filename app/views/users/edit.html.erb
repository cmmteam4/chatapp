<%= render 'layouts/nav2' %>
<div class="d-flex justify-content-center">
<div class="col-md-4 col-md-offset-4">
<h1 style="text-align:center">Update Your Profile</h1>

  <%= form_for @users do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, name:"name", class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, name:"email",class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password,name:"password", class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, name:"password_confirmation", class: 'form-control' %>
      <br>
      <%= f.submit "Update Profile", class: "btn btn-primary btn-block" %><br> 
      

    <% end %>
    <br>
    <%= button_to 'Cancel', workspace_path(@workspace), :id => "open-contacts-dialog-btn",
        :class => "btn btn-secondary btn-block", :method => :get %>

  </div>
</div>