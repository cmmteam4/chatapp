<p id="notice"><%= notice %></p>

<h1>Channels</h1>

<table>
  <thead>
    <tr>
      <th>Channel name</th>
      <th>Channel type</th>
      <th>Workspace</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.channel_name %></td>
        <td><%= channel.channel_type %></td>
        <td><%= channel.workspace_id %></td>
        <td><%= link_to t('Show'), channel %></td>
        <td><%= link_to t('Edit'), edit_channel_path(channel) %></td>        
        <td><%= button_to t('Delete'),  channel, :id => "open-contacts-dialog-btn",
        :class => "btn btn-primary btn-sm ", :method => :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Channel', new_channel_path %>
