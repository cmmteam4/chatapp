body {
  font-family: "Lato", sans-serif;
  background-color: lightgrey;
}

.sidenav {
  height: 100%;
  width: 250px;
  position: fixed;
  top: 10;
  left: 10;
  background:url("images/b.jpg");
  background-position:left;
  background-size:cover;
  background-repet: no-repeat;
