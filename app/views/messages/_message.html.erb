<small> <%= message.user.name %> </small><small> <%= message.created_at %> </small>   
<div class="alert alert-primary" style="width: 400px;height: 50px;align: left;">
    <%= message.msg_body %>
    <small><%= link_to t('Delete'),  message_path(message), :method => :delete, data: { confirm: 'Are you sure?' } %></small> 
    <% if message.starred == true %>
          <i onclick="gofavourite(this)" star_id="<%= message.id %>" class="fas fa-heart" style="position: absolute;left:90%;z-index: 999;color:red;"></i>
        <% else %>
          <i onclick="gofavourite(this)" star_id="<%= message.id %>" class="fas fa-heart" style="position: absolute;left:90%;z-index: 999;color:grey;"></i>
        <% end %> 
</div>         